<resources>
    <!-- Base application theme. -->
    <style name="Theme.Secondhand" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_04</item>
        <item name="colorPrimaryVariant">@color/dark_blue_01</item>
        <item name="colorOnPrimary">@color/neutral_02</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_02</item>
        <item name="colorSecondaryVariant">@color/dark_blue_01</item>
        <item name="colorOnSecondary">@color/neutrak_divider</item>

        <!-- Typography. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Secondhand.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Secondhand.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Secondhand.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Secondhand.Title</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Secondhand.Title2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Secondhand.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Secondhand.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Secondhand.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Secondhand.Button</item>
        <!--        <item name="textAppearanceSubtitle1">@style/TextAppearance.Secondhand.Subtitle1</item>-->
        <!--        <item name="textAppearanceSubtitle2">@style/TextAppearance.Secondhand.Subtitle2</item>-->
        <!--        <item name="textAppearanceCaption">@style/TextAppearance.Secondhand.Caption</item>-->
        <!--        <item name="textAppearanceOverline">@style/TextAppearance.Secondhand.Overline</item>-->
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <!-- Splash Screen -->
        <item name="windowSplashScreenBackground">@color/dark_blue_04</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_second_hand</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Secondhand</item>
    </style>
</resources>